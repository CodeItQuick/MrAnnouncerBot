<Window x:Class="ChatWatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatWatch"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" 
		PreviewLostKeyboardFocus="Window_PreviewLostKeyboardFocus"
		Topmost="True"
		 WindowStyle="None"
		MaxHeight="70"
		MouseDown="Window_MouseDown"
		MouseDoubleClick="Window_MouseDoubleClick"
		>
	<Grid>
		<Rectangle x:Name="rectImportant" Fill="#FFFF3333" Opacity="0.5" Visibility="Hidden"></Rectangle>
		<Rectangle x:Name="rectMedium" Fill="#FFFF9500" Opacity="0.5" Visibility="Hidden"></Rectangle>
		<TextBlock x:Name="tbAuthor" HorizontalAlignment="Right" Margin="0, -10, 10, 0" Text="Author" Width="Auto" Height="Auto" VerticalAlignment="Center" FontSize="22" Opacity="0.5"/>
		<TextBlock x:Name="tbStatus" Margin="10, -10, 0, 0" Text="Last Message Sent: " Width="Auto" Height="Auto" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="44"/>
	</Grid>
</Window>
