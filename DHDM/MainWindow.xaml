<Window x:Class="DHDM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DHDM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="2*" />
			<ColumnDefinition Width="5" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<TabControl Height="419" Width="525" SelectionChanged="TabControl_SelectionChanged">
			<TabItem Header="Kent">
				<Grid Background="#FFE5E5E5" Margin="0,0,206,0"/>
			</TabItem>
			<TabItem Header="Karen">
				<Grid Background="#FFE5E5E5"/>
			</TabItem>
			<TabItem Header="Mark" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="54">
				<Grid Background="#FFE5E5E5"/>
			</TabItem>
			<TabItem Header="Kayla" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="54">
				<Grid Background="#FFE5E5E5"/>
			</TabItem>
		</TabControl>
		<GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />
		<TextBlock Grid.Column="2" FontSize="55" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap">Right side</TextBlock>
	</Grid>
</Window>
