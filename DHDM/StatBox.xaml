<UserControl x:Class="DHDM.StatBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DHDM"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
			<TextBox x:Name="txtEdit" Height="25" Visibility="Hidden" PreviewKeyUp="TxtEdit_PreviewKeyUp" TextChanged="TxtEdit_TextChanged"></TextBox>
			<TextBlock x:Name="txtDisplay" Width="Auto" Height="Auto" MouseDown="TxtDisplay_MouseDown" PreviewKeyUp="TxtDisplay_PreviewKeyUp"/>
    </Grid>
</UserControl>
