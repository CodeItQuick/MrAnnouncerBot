<UserControl x:Class="DHDM.User_Controls.TimeSpanEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DHDM.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="170" Background="AliceBlue"
						 DataContext="{Binding RelativeSource={RelativeSource Self}}"
						 x:Name="uc"
						 >
	<Grid>
		<StackPanel x:Name="spControls" Orientation="Horizontal">
			<TextBlock x:Name="tbLabel" Text="{Binding Path=Label, ElementName=uc}" Width="Auto" Height="24" Margin="0,5,0,0" />
			<TextBox x:Name="tbxAmount" Height="22" Margin="6,2,8,0" Text="{Binding Path=Amount, ElementName=uc}" >
			</TextBox>
			<ComboBox x:Name="cmbMeasure" Height="24" SelectedIndex="{Binding Path=MeasureIndex, ElementName=uc}" ItemsSource="{Binding Source={StaticResource enumTimeMeasure}}">
			</ComboBox>
		</StackPanel>
	</Grid>
</UserControl>
