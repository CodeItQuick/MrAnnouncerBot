<UserControl x:Class="DndUI.NumEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DndUI"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="300" Background="AliceBlue">
	<StackPanel Orientation="Horizontal" Margin="0, 1, 0, 1">
		<TextBlock x:Name="tbLabel" Text="Label: " Width="Auto" Height="Auto" Margin="0, 1, 0, 1" />
		<TextBox x:Name="tbxNumber" Margin="0, 0, 0, 0" TextChanged="TbxNumber_TextChanged">
			100
		</TextBox>
		<TextBlock x:Name="tbUnits" Text="px" Width="Auto" Height="Auto" Margin="1, 1, 12, 1" Foreground="Gray" />
	</StackPanel>
</UserControl>
